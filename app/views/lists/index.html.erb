<div class="banner">
  <h1>Save any kind of movies</h1>
  <h2>Classic</h2>
</div>
<div class="container">
  <div class="container-bar">
    <h1>My lists</h1>
    <%= link_to "Create a movie list", "/lists/new", class: "btn btn-gradient list-create-button" %>
  </div>
  <div class="lists-list">

    <% @lists.each do |list| %>
      <%= link_to list_path(list.id) do %>
        <div class="list-card">
          <%= list.name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
